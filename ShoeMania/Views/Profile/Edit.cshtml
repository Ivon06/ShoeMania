@using ShoeMania.Core.ViewModels.Profile
@model EditProfileViewModel

<div class="container" style="margin-top: 100px;">
    <div class="main-body">
        <form class="requires-validation" method="post" enctype="multipart/form-data">
            <div class="row">

                <div class="col-lg-4">

                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">


                                <div class="circle">
                                    @if (Model.ProfilePictureUrl == null)
                                    {
                                        <img class="profile-pic" src="~/img/blank-profile-picture.png">

                                    }
                                    else
                                    {
                                        <img class="profile-pic" src="@Model.ProfilePictureUrl">

                                    }
                                    <div class="p-image">
                                        <i class="bi bi-camera-fill upload-button"></i>
                                        <input asp-for="@Model.ProfilePicture" class="file-upload" type="file" accept="image/*" />
                                    </div>
                                </div>


                                <div class="mt-5">
                                    <h4>@Model.FirstName @Model.LastName</h4>
                                    <p class="text-secondary mb-1">Customer</p>
                                    <p class="text-muted font-size-sm">@Model.Address</p>
                                </div>
                            </div>
                            <hr class="my-4">
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card">

                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">First Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="@Model.FirstName" type="text" class="form-control" value="@Model.FirstName">
                                    <span class="text-danger" asp-validation-for="@Model.FirstName"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Last Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="@Model.LastName" type="text" class="form-control" value="@Model.LastName">
                                    <span class="text-danger" asp-validation-for="@Model.LastName"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="@Model.Email" type="text" class="form-control" value="@Model.Email">
                                    <span class="text-danger" asp-validation-for="@Model.Email"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Phone</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="@Model.Phone" type="text" class="form-control" value="@Model.Phone">
                                    <span class="text-danger" asp-validation-for="@Model.Phone"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Address</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="@Model.Address" type="text" class="form-control" value="@Model.Address">
                                    <span class="text-danger" asp-validation-for="@Model.Address"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">City</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="@Model.City" type="text" class="form-control" value="@Model.City">
                                    <span class="text-danger" asp-validation-for="@Model.City"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Country</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="@Model.Country" type="text" class="form-control" value="@Model.Country">
                                    <span class="text-danger" asp-validation-for="@Model.Country"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-9 text-secondary">
                                    <button type="submit" class="btn btn-warning px-4">Edit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/editProfile.css" asp-append-version="true" />
}
@section Scripts {
    <script src="~/js/editShoe.js" asp-append-version="true"></script>
}
