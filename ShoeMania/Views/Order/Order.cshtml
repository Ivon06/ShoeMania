@using ShoeMania.Core.ViewModels.Order
@model OrderFormModel


<h2 class="text-dark text-center">Order</h2>
<hr />

<form method="post" asp-action="Order" enctype="multipart/form-data">

    <div class="sopping-cart">
        <div class="column-labels">
            <label class="product-image" style="margin-left: 30px;">Image</label>
            <label class="product-details">Product</label>
            <label class="product-price">Price</label>
            <label class="product-quantity">Size</label>
            <label class="product-removal">Remove</label>
        </div>
        @foreach (var shoe in Model.Shoes)
        {
            <partial name="_CartShoePartial" model="@shoe" />
        }
    </div>

    <div class="form-group" style="margin-left: 3rem;width: 90%">
       
        <div class="mb-3">
            <select asp-for="DeliveryOfficeId" data-placeholder="Sizes" multiple class="form-control chosen-select choices-multiple-remove-button">
                @foreach (var a in Model.Offices)
                {
                    <option value="@a.Id">@a.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group" style="margin-left: 3rem;width: 90%">
        <label asp-for="City">City: </label>
        <input asp-for="City" type="text" id="city" required />
    </div>

    <input asp-for="PaymentId" type="hidden" value="@Model.PaymentId" />

    <div class="form-group" style="margin-left: 3rem;">
        <input type="submit" value="Place Order" />
    </div>

</form>

@section Styles {
    <link rel="stylesheet" href="~/css/order.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />

}
