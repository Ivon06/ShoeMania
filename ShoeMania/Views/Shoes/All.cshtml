@using ShoeMania.Core.ViewModels.Shoes
@model ShoesQueryModel

<form method="get">
    <h1 class="text-black text-center mt-2">Our Products</h1>
    <div class="row" style="margin-left: 400px; margin-top: 1em;">

        <div class="form-group col-md-3 justify-content-between">

            <div class="form-group">
                <label asp-for="Category" class="tech-label">Category</label>
                <select asp-for="Category" class="tech-select form-control">
                    <option value="">All</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category">@category</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="SearchString" class="tech-label">Търсене</label>
            <input asp-for="@Model.SearchString" class="tech-select form-control" placeholder="Търсене" />
        </div>

        <div class="col-md-3">
            <div class="form-group mt-3 p-2">
                <button type="submit" class="btn btn-light mt-1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-search text-black" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                    </svg>
                </button>
            </div>
        </div>

    </div>
</form>

<div class="row">
    @if (Model.Shoes.Count() != 0)
    {
        var first = Model.Shoes.First();


        <partial name="_ShoePartial" model="@first" />


        @for (int i = 1; i < Model.Shoes.Count(); i++)
        {

            <partial name="_ShoePartial" model="Model.Shoes[i]" />

        }
    }
    else
    {

        <h1 class="text-dark text-center" style="margin-bottom: 100px; margin-top: 50px;">Няма обувки съвпадащи с вашето търсене</h1>


    }
</div>


@section Styles {
    <link rel="stylesheet" href="~/css/shoes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/product.css" asp-append-version="true" />
}

