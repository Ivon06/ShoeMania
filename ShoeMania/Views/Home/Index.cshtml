@{
    ViewData["Title"] = "Home Page";
}

<section class="slider_section ">
    <div id="customCarousel1" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="container ">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-box">
                                <h1>
                                    Welcome to ShoeMania
                                </h1>
                                <p>
                                    Welcome to ShoeMania, your ultimate destination for stylish, comfortable, and trend-setting footwear! Step into a world of endless choices and discover the perfect pair for every occasion. Let the mania begin!
