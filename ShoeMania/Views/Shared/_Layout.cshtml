@using ShoeMania.Extensions
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.css" integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="header_section">
        <div class="header_top"
             style="background-color:black">

            <div class="container-fluid">
                <div class="top_nav_container">
                    <div class="user_option_box">
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <a asp-action="MyProfile" asp-controller="Profile" asp-route-userId="@User.GetId()" class="account-link">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                <span>
                                    My Account
                                </span>
                            </a>
                        }

                        <a asp-action="Cart" asp-controller="Shoes" class="cart-link">
                            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                            <span>
                                Cart
                            </span>
                        </a>
                    </div>
                </div>

            </div>
        </div>
        <div class="header_bottom"
             style="background-color:black">
            <div class="container-fluid">
                <partial name="_NotificationPartial" />

                <nav class="navbar navbar-expand-lg custom_nav-container  ">
                    <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                        <span>
                           Shoe Mania
                        </span>
                    </a>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class=""> </span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ">
                            <li class="nav-item active">
                                <a class="nav-link" asp-action="Index" asp-controller="Home">Home</a>
                            </li>
                            
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Shoes" asp-action="All">Products</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link" asp-action="WhyUs" asp-controller="Home">Why Us</a>
                            </li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="Add" asp-controller="Shoes">Add Product</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="AdminOrders" asp-controller="Order">My Orders</a>
                                </li>

                            }

                            @if (User.IsInRole("Customer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="UserOrders" asp-controller="Order">My Orders</a>
                                </li>
                            }
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </nav>
            </div>
        </div>
    </header>


    @RenderBody()

    <section class="info_section"
             style="background-color:black">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="info_contact">
                        <h5>
                            <a asp-action="Index" asp-controller="Home" class="navbar-brand">
                                <span>
                                    Shoe Mania
                                </span>
                            </a>
                        </h5>
                        <p>
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            Address
                        </p>
                        
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="info_info">
                        <h5>
                            Welcome to Shoe Mania – Your Ultimate Footwear Destination!
                        </h5>
                        <p>
                            At Shoe Mania, we believe every step you take deserves to be comfortable, stylish, and unforgettable. Our online store offers an extensive collection of footwear for men, women, and kids, catering to every style, occasion, and need. Whether you’re looking for trendy sneakers, elegant heels, durable boots, or comfortable sandals, we’ve got you covered!
                        </p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="info_links">
                        <h5>
                            Useful Link
                        </h5>
                        <ul>
                            <li>
                                <a asp-action="Index" asp-controller="Home">
                                    Home
                                </a>
                            </li>
                            <li>
                                <a asp-action="WhyUs" asp-controller="Home">
                                    Why Us
                                </a>
                            </li>
                            <li>
                                <a asp-action="All" asp-controller="Shoes">
                                    Products
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="info_form ">
                        <h5>
                            Newsletter
                        </h5>
                        <form action="">
                            <input type="email" placeholder="Enter your email">
                            <button>
                                Subscribe
                            </button>
                        </form>
                        <div class="social_box">
                            <a href="">
                                <i class="fa fa-facebook" aria-hidden="true"></i>
                            </a>
                            <a href="">
                                <i class="fa fa-twitter" aria-hidden="true"></i>
                            </a>
                            <a href="">
                                <i class="fa fa-instagram" aria-hidden="true"></i>
                            </a>
                            <a href="">
                                <i class="fa fa-youtube" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="footer_section"
            style="background-color:black">
        <div class="container">
            <p>
                &copy; <span id="displayYear"></span> All Rights Reserved By
                <a href=""> ShoeMania</a>
            </p>
        </div>
    </footer>

    <script src="https://kit.fontawesome.com/b9403dda92.js" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
