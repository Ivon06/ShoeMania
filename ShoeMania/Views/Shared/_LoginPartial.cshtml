@using Microsoft.AspNetCore.Identity
@using ShoeMania.Data.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@using ShoeMania.Extensions


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-action="MyProfile" asp-controller="Profile" asp-route-userId="@User.GetId()" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-action="Logout" asp-controller="Account">
                <button type="submit" class="nav-link btn btn-link text-light">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-action="Login" asp-controller="Account">Login</a>
        </li>
    }
</ul>
